{
    "name": "haeckel/json-rpc-server",
    "description": "Json rpc 2.0 server",
    "type": "library",
    "require-dev": {
        "phpunit/phpunit": "^12.3",
        "phpstan/phpstan": "^2.1",
        "squizlabs/php_codesniffer": "^3.13"
    },
    "license": "LGPL-3.0-or-later",
    "autoload": {
        "psr-4": {
            "Haeckel\\JsonRpc\\": "src/",
            "Haeckel\\JsonRpc\\Test\\": "test/"
        }
    },
    "authors": [
        {
            "name": "Dominik HÃ¤ckel",
            "email": "dh@dc.ag"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^8.2",
        "psr/log": "^3.0",
        "monolog/monolog": "^3.9",
        "haeckel/json-rpc-server-contracts": "^4.0.0",
        "ext-json": "*"
    },
    "scripts": {
        "test": [
            "@putenv XDEBUG_MODE=coverage",
            "vendor/bin/phpunit"
        ],
         "testSilent": [
            "@putenv XDEBUG_MODE=coverage",
            "vendor/bin/phpunit --no-output 2> /dev/null"
        ],
        "phpstan": [
            "vendor/bin/phpstan"
        ],
        "cs": [
            "vendor/bin/phpcs src/"
        ],
        "cbf": [
            "vendor/bin/phpcbf src/"
        ],
        "ci": [
            "@cbf",
            "@cs",
            "@phpstan -q",
            "@testSilent"
        ]
    }
}
